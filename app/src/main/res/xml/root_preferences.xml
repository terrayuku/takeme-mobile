<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/profile_header">

        <EditTextPreference
            app:key="display_name"
            app:title="@string/display_name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="phone_number"
            app:title="@string/phone_number"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/general_header">

        <Preference app:title="Privacy Policy" app:key="policy">
        </Preference>
        <Preference app:title="Terms and Conditions" app:key="terms">
        </Preference>
        <Preference app:title="@string/app_version" app:key="version">
        </Preference>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
